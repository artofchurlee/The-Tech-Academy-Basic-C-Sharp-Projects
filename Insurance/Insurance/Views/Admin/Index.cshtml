@using Insurance.ViewModels;

@model List<InsuranceVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-10 col-md-10 col-lg-10 mx-auto shadow">
        <div class="card-header text-center">
            <h1 class="m-0">Customer List</h1>
        </div>


        <div class="card-body">
            @foreach (var customer in Model)
            {
                <div class="row mb-3">
                    <div class="col-2">
                        @customer.FirstName
                    </div>
                    <div class="col-2">
                        @customer.LastName
                    </div>
                    <div class="col-4">
                        @customer.EmailAddress
                    </div>
                    <div class="col">
                        @customer.InsQuote
                    </div>
                </div>
            }

        </div>
    </div>
</div>

