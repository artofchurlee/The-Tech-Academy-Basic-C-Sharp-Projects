 <div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h1 class="m-0">Insurance</h1>
            <p class="card-text">Please complete the following to get an insurance quote customized for you!</p>
        </div>


        <div class="card-body">
            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">

                <div class="form-group col-md-12">
                    <label>First Name</label>
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <label>Last Name</label>
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <label>Email address</label>
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address">
                </div>
                <div class="form-group col-md-12">
                    <label>Date of Birth</label>
                    <input name="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth">
                </div>
                <div class="form-group col-md-12">
                    <label>What year is your car?</label>
                    <input name="CarYear" type="number" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group col-md-12">
                    <label>What is your car's make?</label>
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <label>What is your car's model? </label>
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <div class="form-group col-md-12">
                    <label>How many speeding tickets have you received?</label>
                    <input name="SpeedingTickets" type="number" class="form-control" placeholder="Please enter a number" />
                </div>
                <div class="form-group form-check col-md-12">
                    <input name="DriveIntoxicated" id="DriveIntoxicated" type="checkbox" value="true" checked/> 
                    <label class="form-check-label">Check if you have had any DUIs.</label>
                </div>
                <div class="form-group form-check col-md-12">
                    <input name="FullCoverage" type="checkbox" value="true" checked />
                    <label class="form-check-label">Check if you want Full Coverage.</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
           }
        </div>
    </div>
</div>


